


<div class="bubble-list">
  <div class="bubble clearfix">
    <%= link_to image_tag(comment.user.avatar(:small)), profile_path(comment.user.pseudo) %>
    <div class="bubble-content">
      <div class="point"></div>
        <div class="bubble-text">
          <p><%= comment.body %></p>
        </div>
    </div>
    <% if comment.user.id == current_user.id %>
<p><%= link_to 'Delete', [comment.pin, comment],
method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></p>
<% end %>
</div>
  </div>





